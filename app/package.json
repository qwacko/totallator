{
	"name": "svelteql-starter",
	"version": "0.0.1",
	"scripts": {
		"dev": "vite dev --host",
		"build": "vite build",
		"deploy": "vite build && npx prisma migrate deploy",
		"package": "svelte-kit package",
		"preview": "vite preview",
		"check": "svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check --plugin-search-dir=. . && eslint .",
		"format": "prettier --write --plugin-search-dir=. .",
		"quality": "npm quality:eslint && npm run quality:prettier && npm run quality:ts",
		"quality:fix": "prettier --ignore-path .gitignore --write --plugin-search-dir=. . && npm run quality:eslint --fix",
		"quality:eslint": "eslint --ignore-path .gitignore .",
		"quality:prettier": "prettier --ignore-path .gitignore --check --plugin-search-dir=. .",
		"quality:ts": "svelte-check --tsconfig ./tsconfig.json",
		"generate": "graphql-codegen"
	},
	"devDependencies": {
		"@graphql-codegen/cli": "^2.11.2",
		"@graphql-codegen/schema-ast": "^2.5.1",
		"@graphql-codegen/typed-document-node": "^2.3.3",
		"@graphql-codegen/typescript": "^2.7.2",
		"@graphql-codegen/typescript-operations": "^2.5.2",
		"@graphql-codegen/typescript-resolvers": "^2.7.2",
		"@graphql-eslint/eslint-plugin": "^3.10.6",
		"@graphql-tools/load-files": "^6.6.0",
		"@sveltejs/adapter-auto": "next",
		"@sveltejs/adapter-node": "^1.0.0-next.96",
		"@sveltejs/adapter-static": "^1.0.0-next.43",
		"@sveltejs/kit": "^1.0.0-next.428",
		"@trivago/prettier-plugin-sort-imports": "^3.3.0",
		"@types/graphql-fields": "^1.3.4",
		"@types/lodash": "^4.14.182",
		"@types/lodash-es": "^4.17.6",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"autoprefixer": "^10.4.7",
		"eslint": "^8.23.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-svelte": "^2.6.0",
		"postcss": "^8.4.14",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.7.0",
		"prettier-plugin-tailwindcss": "^0.1.13",
		"svelte": "^3.49.0",
		"svelte-adapter-deno": "^0.7.0",
		"svelte-check": "^2.7.1",
		"svelte-preprocess": "^4.10.7",
		"tailwindcss": "^3.1.6",
		"tslib": "^2.3.1",
		"typescript": "^4.7.4",
		"vite": "^3.0.0",
		"vite-plugin-watch-and-run": "^1.0.3"
	},
	"type": "module",
	"dependencies": {
		"@envelop/depth-limit": "^1.6.1",
		"@envelop/generic-auth": "^4.3.1",
		"@graphql-tools/merge": "^8.3.6",
		"@graphql-tools/schema": "^9.0.4",
		"@graphql-typed-document-node/core": "^3.1.1",
		"@graphql-yoga/common": "^2.12.3",
		"@iconify/svelte": "^3.0.0",
		"@lucia-sveltekit/adapter-prisma": "^0.3.3",
		"@prisma/client": "^4.4.0",
		"@urql/devtools": "^2.0.3",
		"@urql/svelte": "^3.0.0",
		"daisyui": "^2.24.0",
		"date-fns": "^2.29.1",
		"graphql": "^16.6.0",
		"graphql-config": "^4.3.5",
		"graphql-fields": "^2.0.3",
		"graphql-scalars": "^1.18.0",
		"graphql-tag": "^2.12.6",
		"lodash-es": "^4.17.21",
		"lucia-sveltekit": "^0.9.1",
		"prisma": "^4.4.0",
		"uuid": "^9.0.0",
		"zod": "^3.17.10"
	}
}
